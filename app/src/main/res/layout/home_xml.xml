<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|left"
        android:background="#ff1e90ff"
        android:text="자기지킴이 출석체크시스템(관리자)"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:drawableRight="@drawable/ic_baseline_museum_24"
        android:drawablePadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_qrcode"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:text="Qr코드 생성하기"
        android:background="#ff00bfff"
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableTop="@drawable/ic_baseline_fullscreen_24"
        android:paddingTop="40dp"
        android:drawablePadding="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <Button
        android:id="@+id/btn_attendance"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:text="학생들 출석 관리하기"
        android:background="#ff00bfff"
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableTop="@drawable/ic_baseline_playlist_add_check_24"
        android:paddingTop="40dp"
        android:drawablePadding="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="288dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.899"
        app:srcCompat="@drawable/kpu_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>